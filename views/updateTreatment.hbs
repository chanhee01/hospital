<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    h1 {
      color: #333;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: left;
      height: 40px;
      vertical-align: middle;
    }

    th {
      background-color: #f2f2f2;
    }

    form {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
    }

    input[type="datetime-local"], input[type="text"], textarea, input[type="submit"] {
      padding: 8px;
      margin: 4px;
      box-sizing: border-box;
      width: 100%;
    }

    textarea {
      resize: vertical;
    }

    input[type="submit"] {
      background-color: #4caf50;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      width: 80px;
    }

    input[type="submit"]:hover {
      background-color: #45a049;
    }

    td:last-child {
      display: flex;
      gap: 5px;
      align-items: center;
    }

    td:last-child input {
      margin: 0;
    }
  </style>
  <title>{{main_title}}</title>
</head>
<body>
  <h1>{{main_title}}</h1>
  <table>
    <tr>
      <th>Treatment Number</th>
      <th>Treatment Date and Time</th>
      <th>Treatment Details</th>
      <th>Nurse ID</th>
      <th>Patient ID</th>
      <th>Action</th>
      <th>Delete</th>
    </tr>
    {{#each treatment_res}}
      <tr>
        <form method="post" action="/updateTreatment">
          <td>{{Treatment_number}}</td>
          <td style="display: none"><input type="text" name="treatment_number" value="{{Treatment_number}}"></td>
          <td><input type="datetime-local" name="treatment_date_time" value="{{Treatment_Date_Time}}"></td>
          <td><textarea name="details">{{Treatment_Details}}</textarea></td>
          <td><input type="text" name="nurse_ID" value="{{Nurse_ID}}"></td>
          <td><input type="text" name="patient_ID" value="{{Patient_ID}}"></td>
          <td>
            <input type="submit" value="Modify">
          </td>
        </form>
        <form method="post" action="/updateTreatment/deleteTreatment">
          <td style="display: none"><input type="text" name="treatment_number" value="{{Treatment_number}}"></td>
          <td>
            <input type="submit" value="Delete">
          </td>
        </form>
      </tr>
    {{/each}}
  </table>
</body>
</html>