<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{main_title}}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            border: 1px solid #ddd;
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 4px;
        }

        .reservation-info {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>{{main_title}}</h1>

        <ul>
            {{#each reservations}}
                <li>
                    <div class="reservation-info">
                        <div>
                            <strong>Reservation Date and Time:</strong> {{Reservation_Date_Time}}
                        </div>
                        <div>
                            <strong>Department ID:</strong> {{Department_ID}}
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</body>
</html>