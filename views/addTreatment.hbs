<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    form {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 300px;
      text-align: left;
      margin-top: 20px;
    }

    h1 {
      color: #333;
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 8px;
      color: #555;
    }

    input, textarea {
      width: 100%;
      padding: 8px;
      margin-bottom: 12px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      background-color: #4caf50;
      color: #fff;
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      width: 100%;
    }

    button:hover {
      background-color: #45a049;
    }
  </style>
  <title>{{main_title}}</title>
</head>
<body>
  <h1>{{main_title}}</h1>
  <form method="post" action="/addTreatment">
    <label for="Treatment_Date_Time">Treatment Date and Time:</label>
    <input type="datetime-local" id="Treatment_Date_Time" name="Treatment_Date_Time" required>

    <label for="Treatment_Details">Treatment Details:</label>
    <textarea id="Treatment_Details" name="Treatment_Details" required></textarea>

    <label for="Nurse_ID">Nurse ID:</label>
    <input type="text" id="Nurse_ID" name="Nurse_ID" required>

    <label for="Patient_ID">Patient ID:</label>
    <input type="text" id="Patient_ID" name="Patient_ID" required>

    <button type="submit">Add Treatment</button>
  </form>
</body>
</html>