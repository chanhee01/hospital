<h1>{{main_title}}</h1>
<form method="post" action="/addTreatment">
    <label for="Treatment_Date_Time">Treatment Date and Time:</label>
    <input type="datetime-local" id="Treatment_Date_Time" name="Treatment_Date_Time" required>
    <br>
    <label for="Treatment_Details">Treatment Details:</label>
    <textarea id="Treatment_Details" name="Treatment_Details" required></textarea>
    <br>
    <label for="Nurse_ID">Nurse ID:</label>
    <input type="text" id="Nurse_ID" name="Nurse_ID" required>
    <br>
    <label for="Patient_ID">Patient ID:</label>
    <input type="text" id="Patient_ID" name="Patient_ID" required>
    <br>
    <button type="submit">Add Treatment</button>
</form>